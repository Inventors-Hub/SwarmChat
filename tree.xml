<root BTCPP_format="3" main_tree_to_execute="FindAndFlock">
    <BehaviorTree ID="FindAndFlock">
        <Sequence name="Main Sequence">
            <Condition name="is_target_detected">
                <Action name="change_color" color="red"/>
            </Condition>
            <flocking/>
            <wander/>
        </Sequence>
        <Fallback name="Avoid Obstacles">
            <Sequence>
                <Condition name="is_obstacle_detected">
                    <Action name="avoid_obstacle"/>
                </Condition>
            </Sequence>
            <Condition name="is_target_reached">
                <Action name="task_completed"/>
            </Condition>
        </Fallback>
    </BehaviorTree>
</root>